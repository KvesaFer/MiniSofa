<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar_for_league"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:contentInsetLeft="0dp"
    android:contentInsetStart="0dp"
    android:contentInsetRight="0dp"
    android:contentInsetEnd="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp"
    android:background="@color/color_primary_default"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="12dp"
            />

        <ImageView
            android:id="@+id/leagueLogo"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/rounded_background"
            app:layout_constraintStart_toStartOf="@id/backButton"
            app:layout_constraintTop_toBottomOf="@id/backButton"
            tools:src="@drawable/clubs_svgrepo_com"/>

        <TextView
            android:id="@+id/leagueName"
            style="@style/Headline1"
            android:layout_width="256dp"
            android:layout_height="28dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/leagueLogo"
            app:layout_constraintTop_toTopOf="@id/leagueLogo"
            android:textColor="@color/surface_surface_1"
            tools:text="LaLiga"
            />

        <ImageView
            android:id="@+id/leagueCountryLogo"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@id/leagueName"
            app:layout_constraintTop_toBottomOf="@id/leagueName"
            tools:src="@drawable/clubs_svgrepo_com"/>

        <TextView
            android:id="@+id/leagueCountry"
            style="@style/Headline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@id/leagueCountryLogo"
            app:layout_constraintBottom_toBottomOf="@id/leagueCountryLogo"
            app:layout_constraintStart_toEndOf="@id/leagueCountryLogo"
            android:textColor="@color/surface_surface_1"
            android:textSize="14sp"
            tools:text="Spain"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.appcompat.widget.Toolbar>